    <FlyoutItem Title="Add Employee" Icon="dotnet_bot.png">
        <Tab>
        <ShellContent Title="Add Employee"
                      ContentTemplate="{DataTemplate views:AddEmployee}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Employees List" Icon="dotnet_bot.png">
        <Tab>
        <ShellContent Title="Employees List"
                      ContentTemplate="{DataTemplate views:EmployeesList}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Demo Page" Icon="dotnet_bot.png">
        <Tab>
        <ShellContent Title="Demo Page"
                  ContentTemplate="{DataTemplate views:NewPage1}" />
        </Tab>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout BackgroundColor="LightBlue">
            <Label Text=".Net MAUI Assignment"
              TextColor="Black"
              FontAttributes="Bold"
              HorizontalOptions="Center" />
            <Label Text = "Sample footer text"
              TextColor="Black"
              HorizontalOptions="Center" />
        </StackLayout>
    </Shell.FlyoutFooter>
